---
import Search from '@/components/islands/Search.svelte'
import Layout from '@/layouts/Layout.astro'

// const urlPath = `${Astro.url.origin}/v1/public/`
// const urlPath = "https://api.drinksapi.dev/v1/"
const urlPath = 'https://drinks-api.unnunoctio-dev.workers.dev/v1'
---

<Layout title="Drinks API">
    <main class="flex-1 w-full max-w-content">
        <section class="py-14 sm:py-20 max-w-130">
            <h1 class="font-bold text-5xl sm:text-6xl font-expletus-sans">Drinks API</h1>
            <p class="mt-12 text-xl sm:text-2xl text-pretty">Todas las bebidas alcohólicas que necesitas, en un solo lugar.</p>
            <p class="mt-2 text-xl sm:text-2xl">API moderna, de codigo abierto y gratuita.</p>
        </section>
        <section>
            <h2 class="pb-4 font-medium text-3xl sm:text-4xl">¡Pruebala ahora!</h2>
            <Search urlPath={urlPath} client:load />
        </section>
    </main>
</Layout>
